# OpenOn Backend Configuration
# Copy this file to .env and update with your values

# App Configuration
DEBUG=true
APP_NAME=OpenOn API
APP_VERSION=1.0.0

# Database Configuration
# SQLite (default for development)
DATABASE_URL=sqlite+aiosqlite:///./openon.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/openon

# Database Settings
DB_ECHO=false

# Security Configuration
# IMPORTANT: Change this in production! Generate a secure random key.
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_USE_RANDOM_SECRET_KEY_HERE

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
# Add your frontend URLs here (comma-separated)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:8080"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Capsule Settings
MIN_UNLOCK_MINUTES=1
MAX_UNLOCK_YEARS=5
EARLY_VIEW_THRESHOLD_DAYS=3

# Background Worker
WORKER_CHECK_INTERVAL_SECONDS=60

# Notification Settings (Optional - for future integration)
# FCM_API_KEY=your-fcm-api-key-here
# APNS_KEY_PATH=/path/to/apns/key.pem
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_USER=your-email@gmail.com
# EMAIL_SMTP_PASSWORD=your-app-password
